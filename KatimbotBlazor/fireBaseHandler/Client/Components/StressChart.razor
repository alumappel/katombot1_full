@inject IJSRuntime JSRuntime
<div class="row" style="align-items: center; justify-content: center;" >
    <div class="d-flex flex-column">
        <canvas id="strCan" width="300" height="150"></canvas>
        <div class="stLbls">
            @for (int i = 0; i < time; i++)
            {
                @if (i % 2 == 0)
                {
                <span>@(i/2)</span>
                }
                else
                {
                    <span> </span>
                }
            }
        </div>
    </div>
    <div class="lev">
        <span style="margin-top:40px;">לחץ</span>
        <span >התרגשות</span>
        <span>רוגע</span>
    </div>

</div>
@code {
    [Parameter]
    public List<int> gsr { get; set; }

    [Parameter]
    public int time { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await JSRuntime.InvokeVoidAsync("calcS", "strCan", gsr);
    }
}
